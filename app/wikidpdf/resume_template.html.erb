  }

  .right {
    width: 45%;
    float: right;
  }

  .section li {
    font-size: 14px;
    clear: both;
  }

  .topic {
    margin-top: 30px;
    font-size: 20px;
  }

  .clear {
      clear: both;
      height: 3px;
      width: 100%;
      color: black;
  }

  .date {
    font-size: 16px;
    text-align: right;
  }

  .list-name {
    margin-top: 10px;
    font-size: 12px;
    font-weight: bold;
  }

  table {
    width: 100%;
  }

  td {
    width: 50%;
  }

  .description-points {
    margin-top: 20px;
  }

  .heading { margin-top: 50px; }
  .heading li { list-style-type: none; }
  .heading ul { padding-left: 0; }
  .heading .right { text-align: right; }
