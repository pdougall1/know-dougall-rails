  ul {
    padding-left: 20px;
    margin-top: 0;
  }

  .page-break { display:block; clear:both; page-break-after:always; }

  .top-title {
    margin-top: 50px;
    font-weight: bold;
    font-size: 15px;
    border-bottom: 1px solid #D9D9D9;
