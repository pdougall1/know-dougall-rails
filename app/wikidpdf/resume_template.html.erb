        <li><%= attribute %></li>
      <% end %>
    </ul>

    <div class='main-title'>Favories</div>
    <ul class='description-points'>
      <% heroes.keys.first.each do |name, attribute| %>
        <li><%= name %> : <%= attribute %></li>
      <% end %>
    </ul>

    <div class='main-title'>Technologies</div>
    <ul class='description-points'>
      <% technologies.keys.first.each do |name, attribute| %>
        <li><%= name %> <%= ": #{attribute}" if attribute %></li>
      <% end %>
    </ul>
  </div>

